extends ../layouts/common

block content
 h1 Products
 if products
  .row
   each product in products 
    .col-3.mt-3
     .card(style='width: 16rem;')
      img.card-img-top(src=product.img, alt='photo')
      .card-body
       h5.card-title=product.name
       p.card-text=product.description
       a.btn.btn-primary(href='/cart/add/'+product.id) Add to cart

 
  nav(aria-label='Page navigation example' class='mt-5')
   ul.pagination
    each i in pageNumber
     if i === 0 
      li.page-item
       a.page-link(href='/product?page='+1)='<'
     else if i === page
      li.page-item.active
        a.page-link(href='/product?page='+i)=i
     else
      li.page-item
        a.page-link(href='/product?page='+i)=i


     
     
    
   





 
 